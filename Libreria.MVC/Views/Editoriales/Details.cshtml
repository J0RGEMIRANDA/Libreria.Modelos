@model Libreria.Modelos.Editorial

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Editorial</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Codigo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Pais
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pais.Nombre)
        </dd>
        <dt class="col-sm-10">
            Total Libros de esta Editorial: @(Model.Libros.Count())
        </dt>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Libros</th>
            <th>Autor</th>
            <th>Año publicación</th>
		</tr>
    </thead>
    <tbody>
        @foreach(var libro in Model.Libros)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-controller="Libros" asp-route-id="@libro.Codigo">@libro.Titulo</a>
                </td>
          
                <td>
                    @libro.Autor.Nombre @libro.Autor.Apellido
                </td>
                <td>
                    @libro.AnioPublicacion
                </td>
            </tr>
		}
    </tbody>
</table>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Codigo}) |
    <a asp-action="Index">Back to List</a>
</div>
